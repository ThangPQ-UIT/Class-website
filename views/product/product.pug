extends ../layout/common
block content 
	h1 Products
	.d-flex.align-items-center 
		form.ml-auto(action="/products/search", method="GET", class="d-flex")
			input(type="text", name="q", class="form-control")
			button(class="btn btn-primary" ml-2) Search
	.row
		each pro in product
			.col-sm6.col-md-4.col-lg3
				.card.mb-3
					img.card-img-top(src=pro.image)
					.card-body
						h5.card-title=pro.name
						p.card-text=pro.description
						a.btn.btn-primary(href='/cart/add' + pro.id) Add to cart
		