extend ../layout/common
block content
	if errors
		each error in errors
			.alert.alert-danger= error
	h3 NEW ACCOUNT
	form(action="/user/create", method="POST")
		.form-group
			label(for="name") Name
			input(name="name",type='text', class="form-control", id="name", value=values ? values.name : '') 
			label(for="phone") Phone
			input(name="phone",type='text', class="form-control", id="phone", value=values ? values.phone : '')
		button(class="btn btn-primary") Create
