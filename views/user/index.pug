extend ../layout/common
block content
	form(action="/users/search", method="GET", class="d-flex pt-2")
		input(type="text", name="q", class="form-control")
		button(class="btn btn-primary ml-2") Search
	table.table
		tr
			th Id
			th Name
			th Phone
			th Action
		each val in user
			tr
				td= val.id
				td= val.name
				td= val.phone
				td
					a(href='/user/' + val.id) View
	a.btn.btn-primary(href="/user/create") New